<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a payment option :"
        android:fontFamily="@font/alegreya_sans_medium"
        android:textSize="20sp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="40sp"/>



<LinearLayout
    android:layout_marginTop="10sp"
    android:layout_width="310sp"
    android:layout_gravity="center"
    android:layout_height="55sp"
    android:background="@drawable/address_field">
<LinearLayout
    android:layout_marginLeft="75sp"
    android:layout_gravity="center"
    android:clickable="true"
    android:focusable="true"
    android:layout_width="155sp"
    android:layout_height="45sp"
    android:background="@drawable/googlepay_button_no_shadow_background"
    android:padding="2sp"
    android:contentDescription="@string/buy_with_googlepay_button_content_description"
    android:orientation="horizontal">

    <LinearLayout
        android:duplicateParentState="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:duplicateParentState="true"
            android:src="@drawable/buy_with_googlepay_button_content"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:duplicateParentState="true"
        android:src="@drawable/googlepay_button_overlay"/>

</LinearLayout>
</LinearLayout>

    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="310sp"
        android:layout_gravity="center"
        android:layout_height="55sp"
        android:background="@drawable/address_field">
        <Button
            android:drawableLeft="@drawable/cash_icon"
            android:paddingLeft="10sp"
            android:id="@+id/btn_cash"
            android:layout_width="155sp"
            android:layout_height="45sp"
            android:background="@drawable/btn_cod"
            android:layout_marginLeft="75sp"
            android:textAllCaps="false"
            android:text="Cash on Delivery"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_width="310sp"
        android:layout_gravity="center"
        android:layout_height="55sp"
        android:background="@drawable/address_field">
        <Button
            android:id="@+id/btn_cardpay"
            android:drawableLeft="@drawable/card"
            android:paddingLeft="10sp"
            android:textAllCaps="false"
            android:layout_width="155sp"
            android:layout_height="45sp"
            android:background="@drawable/btn_cod"
            android:layout_marginLeft="75sp"
            android:text="Online Payment"
            android:layout_gravity="center"/>

    </LinearLayout>



</LinearLayout>

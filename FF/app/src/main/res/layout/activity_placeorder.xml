<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/activity_toolbar"/>

    <TextView
        android:textSize="16sp"
        android:layout_marginTop="56sp"
        android:layout_marginLeft="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Delivery Address -"/>
    <TextView
        android:layout_width="400sp"
        android:layout_height="50sp"
        android:layout_marginTop="80sp"
        android:layout_marginLeft="10sp"
        android:id="@+id/previous_address"
        android:text="Previous Address Here"
        />
    <Button
        android:layout_width="200sp"
        android:textSize="14sp"
        android:id="@+id/select_address"
        android:textColor="@color/quantum_white_100"
        android:background="@drawable/place_order"
        android:layout_height="35sp"
        android:layout_marginTop="135sp"
        android:layout_centerHorizontal="true"
        android:text="Select New Address"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="175sp"
        android:id="@+id/order_list"
        android:layout_width="match_parent"
        android:layout_height="400sp"
        android:scrollbars="vertical"
        tools:listitem="@layout/item_cart_view"/>

    <LinearLayout
        android:layout_marginTop="540sp"
        android:layout_width="700sp"
        android:layout_height="250sp"
        android:orientation="vertical"
        android:background="@drawable/order_box">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="120sp"
      android:orientation="horizontal"
      android:background="@drawable/order_box">

      <LinearLayout
          android:layout_width="200sp"
          android:layout_height="100sp"
          android:orientation="vertical"
          android:layout_marginLeft="25sp"
          android:layout_marginTop="15sp">

      <TextView
          android:layout_width="150sp"
          android:layout_height="wrap_content"
          android:text="Order Amount:"
          android:textSize="18sp"
         />

          <TextView
              android:layout_width="150sp"
              android:layout_height="wrap_content"
              android:layout_marginTop="10sp"
              android:text="Delivery Charge:"
              android:textSize="18sp"
              />

          <TextView
              android:layout_width="150sp"
              android:layout_height="wrap_content"
              android:text="Total Amount:"
              android:textSize="18sp"
              android:layout_marginTop="10sp"
              />


      </LinearLayout>


        <LinearLayout
            android:layout_width="150sp"
            android:layout_height="100sp"
            android:orientation="vertical"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="10sp">

            <TextView
                android:gravity="center"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textSize="18sp"
                />

            <TextView
                android:gravity="center"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Amount"
                android:textSize="18sp"
                />

            <TextView
                android:gravity="center"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                />


        </LinearLayout>



    </LinearLayout>

        <Button
            android:text="PLACE ORDER"
            android:id="@+id/place_order"
            android:textSize="20sp"
            android:textColor="@color/quantum_white_100"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:background="@color/quantum_lightgreen500"/>

    </LinearLayout>



</RelativeLayout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350sp"
    android:layout_height="80sp"
    android:orientation="horizontal"
    android:layout_marginTop="10sp">
    <ImageView
        android:id="@+id/searchproduct_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="5sp"
        android:src="@drawable/loading"/>

    <LinearLayout
        android:layout_width="102dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="106dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/searchproduct_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:text="Product Name"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/searchproduct_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:gravity="center"
            android:text="Size"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="133dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/searchproduct_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans_medium"
            android:gravity="center_horizontal"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="15sp"
            android:text="Product Price"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/searchproduct_count"
            android:layout_width="83dp"
            android:layout_height="30dp"
            android:layout_marginLeft="23sp"
            android:layout_marginTop="45sp"
            android:visibility="invisible"
            app:backGroundColor="@android:color/transparent"
            app:textColor="@android:color/black" />

        <Button
            android:id="@+id/searchproduct_addtocart"
            android:layout_width="wrap_content"
            android:layout_height="33sp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginRight="10sp"
            android:layout_marginTop="45sp"
            android:background="@drawable/btn_add_to_cart"
            android:drawableLeft="@drawable/shopping2"
            android:drawablePadding="4sp"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:text="Add to Cart"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/searchproduct_unavailable"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginTop="45sp"
            android:layout_marginEnd="35sp"
            android:visibility="invisible"
            android:fontFamily="@font/alegreya_sans_medium"
            android:text="Unavailable"
            android:textSize="14sp"
            android:textColor="@color/quantum_googred200"
            android:textStyle="bold" />


    </RelativeLayout>
</RelativeLayout>
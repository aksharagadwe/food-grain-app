<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_user">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="90sp"
        android:id="@+id/userphoto_profile"
        android:layout_height="90sp"
        app:civ_border_width="3sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.433" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="360sp"
            android:text="Hi!"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_marginLeft="20sp"/>
        <TextView
            android:id="@+id/username_profile"
            android:layout_width="wrap_content"
            android:text="Name"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:layout_marginLeft="20sp"/>

        <TextView
            android:id="@+id/useremail_profile"
            android:layout_width="wrap_content"
            android:text="Email"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="20sp"/>

        <LinearLayout
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:text="Phone :"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_marginLeft="20sp"/>

            <TextView
                android:id="@+id/userphone_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:layout_marginLeft="20sp"/>



        </LinearLayout>
<LinearLayout
    android:layout_marginTop="5sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:text="Address:"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginLeft="20sp"/>

        <TextView
            android:id="@+id/useraddress_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginLeft="20sp"/>



</LinearLayout>

        <Button
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40sp"
            android:text="Edit Profile"
            android:fontFamily="@font/prata"
            android:background="@drawable/btn_rounded"/>




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
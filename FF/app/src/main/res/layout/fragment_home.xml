<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gridindex"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="165sp"
        android:layout_marginTop="256sp"
       android:layout_marginLeft="15sp"
        android:orientation="horizontal">

        <Button
            android:layout_width="134dp"
            android:layout_height="150dp"
            android:background="@drawable/grid_btn"
            android:text="Fresh Fruits"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13sp"
            android:orientation="vertical">

            <Button
                android:layout_width="102dp"
                android:layout_height="81dp"
                android:background="@drawable/grid_btn"
                android:text="Vegetables"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="99dp"
                android:layout_height="69dp"
                android:layout_marginTop="5sp"
                android:paddingBottom="17sp"
                android:background="@drawable/grid_btn"
                android:text="Daily Needs"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:layout_width="123dp"
            android:layout_height="154dp"
            android:layout_marginLeft="10sp"
            android:background="@drawable/grid_btn"
            android:text="Vegetables"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold"/>

    </LinearLayout>


</FrameLayout>
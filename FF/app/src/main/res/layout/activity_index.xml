<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:orientation="vertical"
    tools:context=".IndexActivity"
    >
    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/activity_toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55sp"
        android:elevation="2sp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_index"
            android:layout_width="408sp"
            android:layout_height="223dp"
            android:layout_marginLeft="2sp"
            android:layout_marginTop="30sp"
            app:cardCornerRadius="15sp">
            >

            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carousel_index"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:fillColor="#FFFF"
                app:indicatorGravity="center_horizontal"
                app:pageColor="@android:color/darker_gray"
                app:radius="3sp"
                app:slideInterval="3000"
                app:strokeColor="@android:color/secondary_text_dark"
                app:strokeWidth="1sp"></com.synnapps.carouselview.CarouselView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="275sp"
            android:textColor="@android:color/secondary_text_light"
            android:fontFamily="@font/paprika"
            android:text="Categories :"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="310sp"
            android:layout_width="match_parent"
            android:layout_height="180sp"
            android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="133sp"
                    android:layout_height="180sp"
                    android:layout_marginLeft="5sp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="133sp"
                        android:layout_height="87sp"
                        app:cardCornerRadius="15sp">

                    <ImageView
                        android:id="@+id/fruit_index"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fruits_normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fruits"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/paprika"
                        android:textColor="@android:color/background_dark"/>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="133sp"
                        android:layout_height="87sp"
                        android:layout_marginTop="6sp"
                        app:cardCornerRadius="15sp">

                        <ImageView
                            android:id="@+id/vegetables_index"
                            android:layout_width="match_parent"
                            android:layout_height="87sp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/veg" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vegetables"
                            android:textSize="12sp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/paprika"
                            android:textColor="@android:color/background_dark"/>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            <LinearLayout
                android:layout_width="128sp"
                android:layout_height="180sp"
                android:layout_marginLeft="4sp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="128sp"
                    android:layout_height="87sp"
                    app:cardCornerRadius="15sp">

                    <ImageView
                        android:id="@+id/exoticfruits_index"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fruits" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exotic Fruits"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/paprika"
                        android:textColor="@android:color/background_dark"/>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="128sp"
                    android:layout_height="87sp"
                    android:layout_marginTop="6sp"
                    app:cardCornerRadius="15sp">

                    <ImageView
                        android:id="@+id/exoticveg_index"
                        android:layout_width="match_parent"
                        android:layout_height="87sp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/exotic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exotic Vegetables"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/paprika"
                        android:textColor="@android:color/background_dark"/>
                </androidx.cardview.widget.CardView>





            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="130sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                app:cardCornerRadius="15sp">

                <ImageView
                    android:id="@+id/grain_index"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/grains"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/paprika"
                    android:text="Whole grain and Pulses"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark"
                    android:textSize="12sp" />


            </androidx.cardview.widget.CardView>


        </LinearLayout>







    </RelativeLayout>




    <com.google.android.material.navigation.NavigationView
        app:headerLayout="@layout/header_nav"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_activity_index"
        app:itemTextColor="@color/textcolorPrimary"
        android:background="@android:color/white"
        app:menu="@menu/drawer_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"/>



</androidx.drawerlayout.widget.DrawerLayout>
